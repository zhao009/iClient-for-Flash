<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:ic="http://www.supermap.com/iclient/2010"
			   xmlns:is="http://www.supermap.com/iserverjava/2008"
			   width="100%" height="100%"
			   creationComplete="initApp()" accentColor="#C5E3BE">
	
	<!--添加热点图-->
	<fx:Script>
		<![CDATA[
			import com.supermap.web.core.Rectangle2D;
			import com.supermap.web.mapping.HeatPoint;
			import com.supermap.web.mapping.HeatStop;
			private var points:Array = [];
			[Bindable]
			private var viewConfig:ViewConfig;
			private function initApp():void
			{
				viewConfig = new ViewConfig(this);
				this.map.viewBounds = new Rectangle2D(-90, -60, 90, 60);
				
				//定义热点
				for(var i:int=0; i<200; i++)
				{
					var x:Number = Math.round(Math.random() * 120 ) - 120/2;
					var y:Number = Math.round(Math.random() * 90) - 90/2;
					var heatPoint:HeatPoint = new HeatPoint(x, y, heatvalue.value);
					points.push(heatPoint);
				}
				
				//创建热点图
				heatMap.heatPoints = points;
			}
			
			protected function heatvalue_changeHandler(event:Event):void
			{
				for(var i:int=0; i<100; i++)
				{
					heatMap.heatPoints[i].value = heatvalue.value;
				}
				heatMap.refresh();
			}
		]]>
	</fx:Script>
	
	<!--添加地图-->
	<ic:Map id="map" height="100%" width="100%" scales="{[1.25e-9, 2.5e-9, 5e-9, 1e-8, 2e-8, 4e-8, 8e-8, 1.6e-7, 3.205e-7, 6.4e-7]}">
		<is:TiledDynamicIServerLayer  url="{viewConfig.webUrl}"
									  mapName="World"
									  mapServiceAddress="{viewConfig.gisUrl}"
									  mapServicePort="8600"/>
		<ic:HeatMapLayer id="heatMap" radius="{radius.value}"/>
	</ic:Map>
	
	<!--操作窗口-->
	<s:controlBarLayout>
		<s:BasicLayout/>
	</s:controlBarLayout>
	<s:controlBarContent>
		<s:HGroup verticalCenter="0" horizontalCenter="0" top="10" bottom="10" gap="30">
			<s:HGroup gap="2">
				<s:Label text="半径：" fontSize="18" fontFamily="宋体" fontWeight="bold"/>
				<s:HSlider id="radius" focusEnabled="false" verticalCenter="1" value="24" minimum="1" maximum="60" snapInterval="0.1"  height="21"/>
			</s:HGroup>
		
			<s:HGroup gap="2">
				<s:Label text="热度：" fontSize="18" fontFamily="宋体"  fontWeight="bold"/>
				<s:HSlider id="heatvalue" focusEnabled="false" value="170" minimum="50" maximum="256" snapInterval="0.1" change="heatvalue_changeHandler(event)"  height="21"/>
			</s:HGroup>
		</s:HGroup>
	</s:controlBarContent>	
</s:Application>
