<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="300"
		 height="400"
		 xmlns:components="com.supermap.components.*"
		 xmlns:path="com.supermap.path.*">
	<fx:Script>
		<![CDATA[
			import com.supermap.events.ResultListClickEvent;

			import mx.collections.ArrayCollection;
			private var _data:Array;
			public var code:String;

			[Bindable]
			private var _listData:ArrayCollection;
			[Bindable]
			private var _title:String;

			public function get title():String
			{
				return _title;
			}

			public function set title(value:String):void
			{
				_title = value;
			}

			public function get data():Array
			{
				return _data;
			}

			public function set data(value:Array):void
			{
				_data = value;
				_listData = new ArrayCollection(data);
			}

			protected function list_clickHandler(event:MouseEvent):void
			{
				if(list.selectedIndex != -1)
				{
					if(code == "start")
					{
						this.dispatchEvent(new ResultListClickEvent(ResultListClickEvent.ORINGIN_SELECTED, list.selectedIndex));
					}
					else
					{
						this.dispatchEvent(new ResultListClickEvent(ResultListClickEvent.DEST_SELECTED, list.selectedIndex));
					}
				}

			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<path:WindowBackground width="100%"
						   height="100%"/>
	<s:HGroup width="100%"
			  height="35"
			  horizontalAlign="center"
			  verticalAlign="middle">
		<s:Label text="{_title}"
				 fontSize="18"
				 fontWeight="bold"
				 color="0xFFFFFF"/>
	</s:HGroup>
	<components:StyledSkinnableContainer left="20"
										 right="20"
										 top="45"
										 bottom="20"
										 borderColor="0xBBBBBB"
										 cornorRadius="5"
										 firstBackColor="0xFFFFFF"
										 skinClass="com.supermap.components.skins.StyleSkinnableContainerSkin">
		<s:List id="list"
				dataProvider="{_listData}"
				left="0"
				right="0"
				top="5"
				bottom="5"
				click="list_clickHandler(event)"/>
	</components:StyledSkinnableContainer>




