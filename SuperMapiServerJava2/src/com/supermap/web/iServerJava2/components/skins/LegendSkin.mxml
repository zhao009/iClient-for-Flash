<?xml version="1.0" encoding="utf-8"?>
<!---
${iServerJava2_components_skins_LegendSkin_Title}.
<p>${iServerJava2_components_skins_LegendSkin_Description}</p>
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:mx="library://ns.adobe.com/flex/mx"  
			 xmlns:components="com.supermap.web.iServerJava2.components.*"
			 width="100%" height="100%" xmlns:supportClasses="com.supermap.web.iServerJava2.components.supportClasses.*"
			 >
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	
	<fx:Metadata> 
		/**
		* ${iServerJava2_components_skins_LegendSkin_attribute_HostComponent_D}.
		*/
		[HostComponent("com.supermap.web.iServerJava2.components.Legend")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/> 
	</s:states>
   
	<fx:Script>
		<![CDATA[
			import com.supermap.web.sm_internal;
			use namespace sm_internal;
		]]>
	</fx:Script>
	<!---
	${iServerJava2_components_skins_LegendSkin_attribute_legendTree_D}
	-->
	<supportClasses:AutoSizeTree id="legendTree"  
			 width="100%"
			 height="100%"
			 dataProvider="{this.hostComponent.dataProvider}"
			 folderClosedIcon="{null}"
			 folderOpenIcon="{null}"
			 borderAlpha="0" contentBackgroundColor="0xffffff"
			 itemRenderer=" com.supermap.web.iServerJava2.components.supportClasses.LegendTreeItemRenderer" 
			 horizontalScrollPolicy="auto"
	         maxHorizontalScrollPosition="{this.legendTree.width / 3}"
			 > 
		
	</supportClasses:AutoSizeTree>
 
</s:SparkSkin>
